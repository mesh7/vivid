{
  "manifest_version": 3,
  "name": "Vivid",
  "description": "A minimal color picker chrome extension",
  "version": "1.0.0",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "activeTab"],
  "icons": {
    "16": "images/color_picker_16.png",
    "32": "images/color_picker_32.png",
    "48": "images/color_picker_48.png",
    "128": "images/color_picker_128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "color_picker.png"
  }
}
